<script>

	var checkboxToday = document.getElementById("checkbox-today");
	var inputDate = document.getElementById("date");
	var dummyDate = document.getElementById("dummyDate");
	dummyDate.valueAsDate = new Date();
	inputDate.valueAsDate = new Date();
	function todayAsDate(){
		if (checkboxToday.checked){
			alert("Checked");
			inputDate.disabled = true;
			dummyDate.disabled = false;
			dummyDate.name = "date";
		}
		else{
			alert("unchecked");
			inputDate.disabled = false;
			dummyDate.disabled = true;
			inputDate.name = "date"
		}
	}
	
</script>